{
    "manifest_version": 3,
    "name": "Fiestafy Extension",
    "description": "Making sites you visit a little more festive for holidays.",
    "version": "1.0",
    "action": {
        "default_title": "Click to open Fiestafy Extension popup",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "24": "images/icon.png",
            "32": "images/icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "content.js"
            ],
            "css" : ["christmas.css"]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "input"
    ],
    "web_accessible_resources": [
        {
            "resources": ["/christmasImgs/*", "/soundFiles/*", "/images/*"],
            "matches": ["<all_urls>"]
        }
    ]
  }


  